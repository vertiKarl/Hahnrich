{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "target": "esnext",
        "removeComments": true,
        "lib": ["ES2021"],
        "strict": true,
        "outDir": "./dist",
        "declaration": true,
        "declarationDir": "./dist/types",
        "rootDir": "./src",
        "moduleResolution": "node",
        "esModuleInterop": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts", "dist"]
}